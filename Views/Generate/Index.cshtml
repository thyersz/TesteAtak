@{
    ViewData["Title"] = "Gerar Dados";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Gerador de Dados Aleatórios</h2>
                    
                    <div class="text-center mb-4">
                        <p class="lead">
                            Gere uma planilha Excel com dados aleatórios para teste.
                        </p>
                    </div>

                    <form asp-action="GenerateExcel" method="post" class="mb-4">
                        <div class="form-group mb-3">
                            <label for="quantidade" class="form-label">Quantidade de registros:</label>
                            <input type="number" id="quantidade" name="quantidade" class="form-control" 
                                   value="100" min="10" max="1000" required 
                                   oninvalid="this.setCustomValidity('Por favor, insira um número entre 10 e 1000')"
                                   oninput="this.setCustomValidity('')" />
                            <div class="form-text text-muted">
                                Escolha quantos registros você deseja gerar (mínimo 10, máximo 1000).
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" id="sendEmail" name="sendEmail" class="form-check-input" value="true" />
                            <label class="form-check-label" for="sendEmail">
                                Enviar também por email para sergio.junior@atak.com.br
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" id="btnGerar" class="btn btn-primary btn-lg">
                                <i class="bi bi-file-earmark-excel"></i> Gerar Planilha Excel
                            </button>
                        </div>
                    </form>

                    <script>
                        document.getElementById('quantidade').addEventListener('input', function() {
                            var valor = parseInt(this.value);
                            var btnGerar = document.getElementById('btnGerar');
                            var mensagem = document.getElementById('mensagemValidacao');
                            
                            if (valor < 10 || valor > 1000 || isNaN(valor)) {
                                btnGerar.disabled = true;
                                if (!mensagem) {
                                    mensagem = document.createElement('div');
                                    mensagem.id = 'mensagemValidacao';
                                    mensagem.className = 'alert alert-warning mt-2';
                                    this.parentNode.appendChild(mensagem);
                                }
                                mensagem.textContent = 'A quantidade deve ser entre 10 e 1000 registros.';
                            } else {
                                btnGerar.disabled = false;
                                if (mensagem) {
                                    mensagem.remove();
                                }
                            }
                        });

                        // Validação inicial ao carregar a página
                        document.addEventListener('DOMContentLoaded', function() {
                            var evento = new Event('input');
                            document.getElementById('quantidade').dispatchEvent(evento);
                        });
                    </script>

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["Message"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @TempData["Error"]
                        </div>
                    }

                    <div class="mt-4">
                        <h5>A planilha incluirá:</h5>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle text-success"></i> Nomes completos</li>
                            <li><i class="bi bi-check-circle text-success"></i> Emails</li>
                            <li><i class="bi bi-check-circle text-success"></i> Telefones</li>
                            <li><i class="bi bi-check-circle text-success"></i> Empresas</li>
                            <li><i class="bi bi-check-circle text-success"></i> Cargos e Departamentos</li>
                            <li><i class="bi bi-check-circle text-success"></i> Salários</li>
                            <li><i class="bi bi-check-circle text-success"></i> Datas de Contratação</li>
                            <li><i class="bi bi-check-circle text-success"></i> Endereços completos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
